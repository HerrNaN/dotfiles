label-connected = %essid%
label-connected-foreground = #eddbb2

format-disconnected =

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = #eddbb2

[module/eth]
type = internal/network
